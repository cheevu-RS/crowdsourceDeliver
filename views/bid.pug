extends layout

block content

    section
        .container
            .row
            .col-lg-12.order-12.order-lg-12.text-center
                h2 #{title}
  
    section#collection
        .container
            .card
                .card-body
                    .row
                    .col-12.text-center
                        div.text-center
                        | Username
                    br
                    br
                    .row
                        .col-12.text-center
                            | Package information information
                    .row
                        .col-12.text-center
                            form
                                div.text-center
                                    label Enter your bid for delivering thepackage
                                    br
                                    input(type='number' min="1" max="50" style="min-width:160px")
                    br
                    .row.pd-2.mb-3
                        .col-1
                        .col-10
                            .top.text-center#demo ETA: 4 minutes and 20 secs
                            br
                            .bottom.d-flex 
                                button.btn.btn-danger CANCEL
                                button.btn.btn-success.ml-auto(onclick="handleBidSubmit()") BID
                        .col-1
    script(src="/js/handleBid.js")

