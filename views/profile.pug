extends layout

block content

  section
    .container
        .profile-user-img-container
            img(src='https://source.unsplash.com/user/timmossholder/350x250')
        .profile-user-content
            if userData
                .profile-user-content-inner-left
                    span
                        | Name: #{userData.name}
                        br
                        | Roll: #{userData.rollNo}
                        br
                        | Dept: #{userData.department}
                .profile-user-content-inner-right
                    span
                        | Year: #{userData.year}
                        br
                        | Rating: #{userData.rating}
                        br
                        | UPI id: shakeabi@upi
        #data_username(style='display:none;')
            | #{user.email.slice(0,9)}
        #data_friend_username(style='display:none;')
            | #{currentPath.split('/')[2]}
        if user.email.slice(0,9)==currentPath.split('/')[2]           
            .profile-user-inner-nav
                div
                    p
                        | Order History
                div
                    p
                        | Current Orders
            .profile-user-order-container
        else
            button.add-friend.btn.btn-success(style='width: 100%;' onclick='addFriend(this.value);')
                | Add Friend

    script(src='/js/profile.js')

