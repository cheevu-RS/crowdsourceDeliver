html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title= title
    meta(name="title" content="Hackathon Starter Kit")
    meta(name="description" content="A Production Grade Node-Typescript/Express Boilerplate with Authentication(Local, Github, Facebook, Twitter, Google, LinkedIn, Dropbox, Slack, Instagram), Authorization, and CRUD functionality + PWA Support!")
    meta(name="keywords" content="nodejs, boilerplate, typescript express, oauth2, twitter, github, facebook, authentication, starter-kit, hackathon, mongodb, dropbox, linkedin, slack, google, discord")
    meta(name="robots" content="index, follow")
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="language" content="English")

    meta(name="viewport" content="width=device-width, initial-scale=1")
    // Bootstrap CSS
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.0/css/bootstrap.min.css")
    // Font Awesome CSS 
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css")
    // Custom stylesheet - for your changes
    link(rel="stylesheet" href="dist/style.css")
    link(rel="manifest" href="manifest.json")

    // Tweaks for older IEs
    //if lt IE 9
      script(src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js")
      script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
  body
    include partials/navbar
    br
    block messages
      if flashes.error || flashes.success || flashes.info
        .section
          .inner
            .flash-messages
              - const categories = Object.keys(locals.flashes)
              each category in categories
                each message in flashes[category]
                  .flash(class=`flash--${category}`)
                    p.flash__text!= message
                    button.flash__remove(onClick="this.parentElement.remove()") &times; 
    block content
    include partials/footer
    // JavaScript files
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.0/js/bootstrap.min.js")
    script(src="https://cdn.linearicons.com/free/1.0.0/svgembedder.min.js")
    script(async,  defer,  src="https://buttons.github.io/buttons.js")
    script(src="https://www.google.com/recaptcha/api.js")
    script(src="dist/App.bundle.js")
    script(src="pwabuilder.js")


